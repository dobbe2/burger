<div id="container">
    <div class="header">
        <h1>Eat Da Burger!</h1>
        <img src="/assets/img/burger.png" alt="">
    </div>

    <div class="burger-name">
        <h2>Add a Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <label for="newburger"> Burger Name:</label><br>
                <input type="text" id="newburger" name="name">
            </div>

            <button id="addburger">Add Burger to List</button>
        </form>
    </div>
    <div class="row">
        <div class="column">
            <h2>Eat These Burgers!</h2>
            <ul id="left-list">
                {{#each burgers}}
                {{#unless devoured}}
                <span class="burgername">{{this.id}} - {{this.burger_name}}
                    <button data-id={{this.id}} class="eatburger" type="submit">Devour It!</button>
                </span>
                <hr><br>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="column">
            <h2>Devoured Burgers</h2>
            <ul id="right-list">
                {{#each burgers}}
                {{#if devoured}}
                <span class="burgername">{{this.id}} - {{this.burger_name}}
                <button data-id="{{this.id}}" class="deleteburger">Remove It!</button>

                </span>

                <hr><br>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <iframe src="https://giphy.com/embed/xT5LMJHW3QETKC4zG8" width="480" height="366" frameBorder="0" class="giphy-embed" allowFullScreen></iframe><p><a href="https://giphy.com/gifs/season-3-the-simpsons-3x7-xT5LMJHW3QETKC4zG8"></a></p>
</div>