<h1>Eat Da Burger!</h1>
<img src="/assets/img/burger.jpg" alt="">

<ul><h2>Your Burgers</h2>
    {{#each burgers}}
    <span>{{this.id}} - {{this.burger_name}}</span><br>
    {{/each}}
</ul>
<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="bu"> Burger Name:</label><br>
        <input type="text" id="bu" name="name">
    </div>

    <button type="submit">Add Burger to List</button>
</form>